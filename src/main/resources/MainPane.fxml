<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="mainPane" prefHeight="178.0" prefWidth="605.0" style="-fx-background-color: #222222;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.MainPaneController">
   <children>
      <Label fx:id="songLabel" alignment="CENTER" layoutX="-2.0" layoutY="1.0" prefHeight="115.0" prefWidth="600.0" text="MP3 Palyer" textFill="#12d715">
         <font>
            <Font size="59.0" />
         </font>
      </Label>
      <ProgressBar fx:id="songProgresBar" layoutY="118.0" prefHeight="18.0" prefWidth="605.0" progress="0.0" />
      <Button fx:id="playButton" layoutY="136.0" mnemonicParsing="false" onAction="#playSong" prefHeight="47.0" prefWidth="79.0" text="Play">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="pauseButton" layoutX="79.0" layoutY="136.0" mnemonicParsing="false" onAction="#pauseSong" prefHeight="47.0" prefWidth="79.0" text="Pause">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="resetSongButton" layoutX="158.0" layoutY="136.0" mnemonicParsing="false" onAction="#resetSong" prefHeight="47.0" prefWidth="79.0" text="Reset">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="prevSongButton" layoutX="237.0" layoutY="136.0" mnemonicParsing="false" onAction="#playPrevSong" prefHeight="47.0" prefWidth="79.0" text="Prev">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="nextSongButton" layoutX="316.0" layoutY="136.0" mnemonicParsing="false" onAction="#playNextSong" prefHeight="47.0" prefWidth="79.0" text="Next">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <ComboBox fx:id="speedBox" layoutX="395.0" layoutY="136.0" onAction="#changeSpeed" prefHeight="47.0" prefWidth="79.0" promptText="Speed" />
      <Slider fx:id="volumeSlider" layoutX="474.0" layoutY="153.0" prefHeight="14.0" prefWidth="130.0" showTickLabels="true" value="50.0" />
   </children>
</AnchorPane>
